{% extends "RayzerCoderUserBundle::layout.html.twig" %}
{% block content %}
<div class="shadow main container round" id="contenu">
    <div class="content-wrapper">
        <div class="thirty laurel">
            <div class="shadow shut-in gd-eee profil-box padd-half no-dist">
                <h2 class="gd-1 padd-half ns nc"> <span class="uc"></span> &nbsp;</h2>
                <div class="avatar-container-box">
                    <div class="avatar-box bd bg-fff bd-ccc left">
                        <div class="js-ajax-update-avatar" style="height: 75px;">
                
                        <img style="max-width: 100%" class="avatar" alt="Avatar - {{ 'profile.show.username'|trans }}: {{ user.username }}" title="{{ user.username }}" src="{{ asset(user.getWebPath()) }}">  </div>
                          
                        
                        <a href="" id="js-ajaxform-edit-avatar" class="edit-link no-hover bg-000 cl-fff alpha-70 nc no-wrap"><ins class="icon edit-small"></ins>&nbsp;Modifier</a>
                    </div>
                    <h2 class="vanilla nick cl-5 nc ns">{{ user.username }}</h2>
                </div>
            </div>
            
            <div class="shadow gd-eee shut-in">
                <div class="bg-fff padd-half bd bd-ccc rating-box round">
                    <span class="nc">évaluations :</span>
                    <div class="rating right" id="js-ajax-update-rating">
                        <p class="txt-ctr"><abbr title="non-applicable">{{user.note}}</abbr></p><p>
                        </p></div>
                    <div class="clear"></div>
                </div>  </div>



        </div>
