                <div class="clear"></div>
                <div class="seventy hardy">



                    <div class="clear"></div>



                    <h4>Nom utilisateur : {{user.username}} </h4>

                    <h4>Nom : {{user.nom}}</h4>
                    <h4>Prenom : {{user.prenom}}</h4>
                    <h4>Sexe :{% if user.sexe == "h" %}Homme{% else %}Femme{% endif %}</h4>

                    <h4>Date de naissance {{user.dateNaissance|date('d/m/Y')}}</h4>

                    <h4>Date d'inscription {{user.dateEnregistrement|date('d/m/Y')}}</h4>

                    <h4>Numero Telephone {{user.telephone}}</h4>
                    <div class="clear"></div>
                </div>
            {{ form(form) }}
            </div>




            <div class="clear"></div>

            <div id="main-nav-outer">
                <div id="navigation">
                    <ul id="main-nav" class="vanilla">
