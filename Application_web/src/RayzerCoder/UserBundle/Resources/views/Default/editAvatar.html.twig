{% extends "RayzerCoderUserBundle::layout.html.twig" %}
{% block content %}




<div style="height:500px;" class="shadow main container round" id="contenu">



    <div class="content-wrapper">

        <div class="thirty laurel">
            <div class="shadow shut-in gd-eee profil-box padd-half no-dist">
                <h2 class="gd-1 padd-half ns nc"> <span class="uc"></span> &nbsp;</h2>

                <div class="avatar-container-box">
                    <div class="avatar-box bd bg-fff bd-ccc left">
                        <div class="js-ajax-update-avatar" style="height: 75px;">


    {% if user.avatar %}
                            <img class="avatar" alt="Avatar - {{ 'profile.show.username'|trans }}:{{ user.username }}" title="{{ user.username }}"src="{{ asset(user.getWebPath()) }}">      </div>
                       {% else %}
                        Pas d'image de profil chargée !
{% endif %}


                        <a href="/fr/mon-compte/mon-profil/mon-avatar" id="js-ajaxform-edit-avatar" class="edit-link no-hover bg-000 cl-fff alpha-70 nc no-wrap"><ins class="icon edit-small"></ins>&nbsp;Modifier</a>
