                    <h2 class="vanilla nick cl-5 nc ns">{{ user.username }}</h2>
                </div>

            </div>

            <div class="shadow gd-8 no-padd shut-nav">
                <ul class="vanilla bd bd-eee">
                    <li>

{% if user.avatar %}
                        <img style="width:150px; height: 150px" src="{{ asset(user.getWebPath()) }}" />
{% else %}
                        Pas d'image de profil chargée !
{% endif %}

                        <h1>Charger une image de profil</h1>

                        <form action="#" method="post" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
                                <input type="submit" value="Uploader" />
                            </form>


                        </li>
                    </ul>
                </div>
